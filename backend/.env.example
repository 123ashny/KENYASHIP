# KenyaShip Security Backend Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Security Keys (MUST be changed in production!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_ME_jwt_secret_key_minimum_32_characters_long
ENCRYPTION_KEY=CHANGE_ME_aes256_encryption_key_32_bytes_hex
HMAC_SECRET=CHANGE_ME_hmac_secret_key_for_code_generation

# Database Configuration
DATABASE_URL=./data/kenyaship.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/kenyaship

# Redis Configuration (optional, for scaling)
REDIS_URL=
# REDIS_URL=redis://localhost:6379

# Location Privacy Settings
LOCATION_GRID_SIZE_METERS=500
PRIVACY_ZONE_DEFAULT_RADIUS_METERS=200
MAX_LOCATION_HISTORY_HOURS=24

# Delivery Code Settings
CODE_TTL_MINUTES=30
CODE_MAX_ATTEMPTS=5
CODE_THEME=kenyan

# OTP Settings
OTP_TTL_SECONDS=300
OTP_LENGTH=6

# Africa's Talking SMS API
AT_API_KEY=
AT_USERNAME=sandbox
AT_SENDER_ID=KenyaShip

# Firebase Push Notifications
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# WhatsApp Business API
WHATSAPP_API_URL=
WHATSAPP_AUTH_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# Emergency Services Integration
EMERGENCY_DISPATCH_URL=
EMERGENCY_API_KEY=

# Data Retention (Kenya DPA Compliance)
RETENTION_DAYS_LOCATION=30
RETENTION_DAYS_DELIVERY=365
RETENTION_DAYS_AUDIT=2555

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:5173
